<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_online_mode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pmd.ubi.pt.surrealistwriter.OnlineMode">

    <Button
        android:text="Create new room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:id="@+id/create_room"
        android:onClick="createRoomOC"/>

    <Button
        android:text="Join to game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:id="@+id/join_table"
        android:onClick="joinRoomOC"
        android:layout_below="@+id/create_room"
        android:layout_alignLeft="@+id/create_room"
        android:layout_alignStart="@+id/create_room"
        android:layout_alignRight="@+id/create_room"
        android:layout_alignEnd="@+id/create_room" />
</RelativeLayout>
