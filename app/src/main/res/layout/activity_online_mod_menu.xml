<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_online_mod_menu"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="100dp"
    android:paddingTop="50dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    tools:context="pmd.ubi.pt.surrealistwriter.OnlineModMenuactivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50px"
        android:textSize="20dp"
        android:textColor="#ff0000"
        android:id="@+id/userNameAndEmail"
        />
    <Button
        android:text="Offline game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/offline_button"
        android:onClick="offlineMode"
        android:layout_marginBottom="20dp"/>

    <Button
        android:text="Online game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/online_button"
        android:layout_marginBottom="20dp"
        android:onClick="onlineModeOC"/>

    <Button
        android:text="Settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settings_button"
        android:layout_marginBottom="20dp"
        android:onClick="settingsOnClick"/>

    <Button
        android:text="Ranking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ranking_button"
        android:layout_marginBottom="20dp"
        android:onClick="rankingOnClick"/>

</LinearLayout>
